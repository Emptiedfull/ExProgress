 <div class="bar-container" id="{{bar_id}}" data-speed="{{speed}}" data-interval="{{interval}}">
            <div class="flavour">
                Press start to begin the progress bar.
            </div>
            <div class="bar">
                <div class="progress"></div>
            </div>
            <div class="time_period">
                    Right now
            </div>
            {% if slider %}
            <div class="settings">
                <div class="slider">
                    <label for="speed-slider">Speed: <span class="speedout"></span>   <i class="fas fa-info-circle info-icon" data-tooltip="Increment in each interval"></i> </label> 
                    <input type="range" id="speed-slider-{{bar_id}}" name="speed" min="1" max="10" value="5" class="speed" step="0.1">
                </div>
                <div class="slider">
                      <label for="interval-slider">interval: <span class="intervalout"></span>   <i class="fas fa-info-circle info-icon"  data-tooltip="Time period of interval(in secs)"></i></label>
                    <input type="range" id="interval-slider-{{bar_id}}" name="speed" min="0.1" max="5" value="1" step="0.1" class="interval">
                </div>
            

            </div>
            {% endif %}
            <div class="controls">

                <button class="start">
                    Start
                </button>
                {% if slider %}
                <button class="pause">
                    Pause
                </button>
                <button class="reset">
                    Reset
                </button>
                <button class="reverse">
                    Reverse
                </button>

                <button class="update">
                    Update Vars
                </button>
                {% endif %}

            </div>
        </div>